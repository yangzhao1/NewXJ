<?xml version="1.0" encoding="utf-8"?>
<com.zq.xinjiang.approval.view.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/id_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:scrollbars="none"
    zhy:rightPadding="100dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <include layout="@layout/activity_menu" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#153762"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:id="@+id/line_xx"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical" >

                        <ImageView
                            style="@style/main_wrap"
                            android:background="@drawable/dian"
                            android:contentDescription="@string/app_name" />

                        <RelativeLayout
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/white_circle" >

                            <com.zq.xinjiang.approval.view.RoundImageView
                                android:id="@+id/civ_main_pic"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/user_default" >
                            </com.zq.xinjiang.approval.view.RoundImageView>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|center_vertical" >

                    <TextView
                        style="@style/main_wrap"
                        android:text="移动审批系统"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/height_" >

                <FrameLayout style="@style/main_wrap" >

                    <com.zq.xinjiang.approval.view.MyImgScroll
                        android:id="@+id/myvp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <LinearLayout
                        android:id="@+id/vb"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="30dp"
                        android:gravity="right|bottom"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@color/white" >

                <LinearLayout
                    style="@style/width_"
                    android:orientation="vertical" >

                    <LinearLayout style="@style/height_" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_dbsx"
                                    style="@style/main_wrap"
                                    android:background="@drawable/dbsx"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_dbsx"
                                    style="@style/main_text_red"
                                    android:text="0" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:text="待办事项" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_gryb"
                                style="@style/main_wrap"
                                android:background="@drawable/gryb"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="个人办件" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_bmyb"
                                style="@style/main_wrap"
                                android:background="@drawable/bmyb"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="部门办件" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/height_" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_ycbj"
                                    style="@style/main_wrap"
                                    android:background="@drawable/ycbj"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_ycbj"
                                    style="@style/main_text_red"
                                    android:text="0" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:layout_height="wrap_content"
                                android:text="异常办件" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_xnfx"
                                style="@style/main_wrap"
                                android:background="@drawable/xnfx"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="效能分析" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_sfxq"
                                style="@style/main_wrap"
                                android:background="@drawable/sfxq"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="收费详情" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/height_" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_byps"
                                    style="@style/main_wrap"
                                    android:background="@drawable/byps"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_byps"
                                    style="@style/main_text_red"
                                    android:text="0" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:text="报延批示" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_znxx"
                                style="@style/main_wrap"
                                android:background="@drawable/znxx"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="站内消息" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_xtsz"
                                style="@style/main_wrap"
                                android:background="@drawable/xtsz"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:text="系统设置" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.zq.xinjiang.approval.view.SlidingMenu>