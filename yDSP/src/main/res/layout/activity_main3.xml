<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rel"
    tools:context=".approval.homeactivity.MainActivity"
     >
     
    <RelativeLayout
        android:id="@+id/titleRel"
        android:layout_width="match_parent"
        android:layout_height="190dp"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             >

            <FrameLayout style="@style/main_wrap" >

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </com.youth.banner.Banner>
            </FrameLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/dian"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/dian"
            android:visibility="gone" />

        <com.zq.xinjiang.approval.view.CircleImageView
            android:id="@+id/topButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:src="@drawable/bg"
            android:visibility="gone"
            android:layout_toRightOf="@+id/dian"
            />

        <LinearLayout
            android:id="@+id/cut_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:padding="15dp"
                android:gravity="center"
                android:textSize="@dimen/textsize_smalle"
                android:textColor="@color/white"
                android:text="@string/cut"
                />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="wrap_content"
                android:src="@drawable/pull_down"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/cut_user"/>
        </LinearLayout>
        <TextView
            android:id="@+id/topTv"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="移动审批系统"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/titleRel"
        android:background="@android:color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:background="@color/white" >

                    <LinearLayout
                        android:id="@+id/line_ch"
                        style="@style/width_"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <LinearLayout
                            style="@style/height_"
                            android:layout_marginTop="20dp" >

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <FrameLayout style="@style/main_wrap" >

                                    <ImageView
                                        android:id="@+id/image_dbsx"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:background="@drawable/dbsx"
                                        android:contentDescription="@string/app_name" />

                                    <TextView
                                        android:id="@+id/tv_dbsx"
                                        style="@style/main_text_red"
                                        android:text="0"
                                        android:textSize="@dimen/text_12"
                                        android:visibility="gone" />
                                </FrameLayout>

                                <TextView
                                    style="@style/main_text"
                                    android:text="待办事项"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_gryb"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/gryb"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="个人办件"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_bmyb"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/bmyb"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="部门办件"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nosee"
                            style="@style/height_"
                            android:visibility="visible">

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <FrameLayout style="@style/main_wrap" >

                                    <ImageView
                                        android:id="@+id/image_ycbj"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:background="@drawable/ycbj"
                                        android:contentDescription="@string/app_name" />

                                    <TextView
                                        android:id="@+id/tv_ycbj"
                                        style="@style/main_text_red"
                                        android:text="0"
                                        android:textSize="@dimen/text_12"
                                        android:visibility="gone" />
                                </FrameLayout>

                                <TextView
                                    style="@style/main_text"
                                    android:text="异常办件"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_xnfx"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/xnfx"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="效能分析"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_sfxq"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/sfxq"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="收费分析"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/height_"
                            android:layout_marginBottom="20dp" >

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <FrameLayout style="@style/main_wrap" >

                                    <ImageView
                                        android:id="@+id/image_byps"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:background="@drawable/byps"
                                        android:contentDescription="@string/app_name" />

                                    <TextView
                                        android:id="@+id/tv_byps"
                                        style="@style/main_text_red"
                                        android:text="0"
                                        android:textSize="@dimen/text_12"
                                        android:visibility="gone" />
                                </FrameLayout>

                                <TextView
                                    style="@style/main_text"
                                    android:text="报延批示"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_znxx"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/znxx"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="站内消息"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>

                            <LinearLayout
                                style="@style/width_"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="vertical" >

                                <ImageView
                                    android:id="@+id/image_xtsz"
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:background="@drawable/yhzx"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    style="@style/main_text"
                                    android:text="用户中心"
                                    android:textSize="@dimen/text_15" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>