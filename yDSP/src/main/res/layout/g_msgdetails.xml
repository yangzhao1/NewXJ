<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/g_titlebar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        android:text="发  送  人："
                        />
                    <TextView
                        android:id="@+id/sendname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text="娃哈哈"
                        android:textColor="@color/black"
                        android:lines="1"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="发送时间："
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        />

                    <TextView
                        android:id="@+id/sendtime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text="2017-09-19"
                        android:textColor="@color/black"
                        android:lines="1"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="重要程度："
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        />

                    <TextView
                        android:id="@+id/importent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text="一般"
                        android:textColor="@color/black"
                        android:lines="1"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        android:text="标        题："
                        />
                    <TextView
                        android:id="@+id/titletext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text="关于xxxxxx"
                        android:textColor="@color/black"
                        android:lines="1"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        android:text="内        容："
                        />
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="?textsizes"
                        android:text="消息类型："
                        />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="?textsizes"
                        android:gravity="center_vertical"
                        android:text="正常"
                        android:textColor="@color/black"
                        android:lines="1"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>