<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#0976b9"
                android:baselineAligned="false" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical" >

                    <LinearLayout
                        android:id="@+id/line_xx"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical" >

                        <com.zq.xinjiang.approval.view.RoundImageView
                            android:id="@+id/civ_main_pic"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/user_default" >
                        </com.zq.xinjiang.approval.view.RoundImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:gravity="center_horizontal|center_vertical" >

                    <TextView
                        style="@style/main_wrap"
                        android:text="移动审批系统"
                        android:textColor="@android:color/white"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="4" >

                <FrameLayout style="@style/main_wrap" >

                    <com.zq.xinjiang.approval.view.MyImgScroll
                        android:id="@+id/myvp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <LinearLayout
                        android:id="@+id/vb"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="30dp"
                        android:gravity="right|bottom"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="11"
                android:background="@color/white" >

                <LinearLayout
                    style="@style/width_"
                    android:orientation="vertical" >

                    <LinearLayout style="@style/height_"
                        android:layout_marginTop="20dp" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_dbsx"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                    android:background="@drawable/dbsx"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_dbsx"
                                    style="@style/main_text_red"
                                    android:text="0"
                                    android:textSize="@dimen/text_12"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="待办事项" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_gryb"
                                android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/gryb"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="个人办件" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_bmyb"
                                android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/bmyb"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="部门办件" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/height_" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_ycbj"
                                    android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                    android:background="@drawable/ycbj"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_ycbj"
                                    style="@style/main_text_red"
                                    android:text="0"
                                    android:textSize="@dimen/text_12"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="异常办件" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_xnfx"
                               android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/xnfx"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="效能分析" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_sfxq"
                                android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/sfxq"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                android:textSize="@dimen/text_15"
                                style="@style/main_text"
                                android:text="收费分析" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout style="@style/height_"
                        android:layout_marginBottom="20dp" >

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <FrameLayout style="@style/main_wrap" >

                                <ImageView
                                    android:id="@+id/image_byps"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                    android:background="@drawable/byps"
                                    android:contentDescription="@string/app_name" />

                                <TextView
                                    android:id="@+id/tv_byps"
                                    style="@style/main_text_red"
                                    android:text="0"
                                    android:textSize="@dimen/text_12"
                                    android:visibility="gone" />
                            </FrameLayout>

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="报延批示" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_znxx"
                               android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/znxx"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="站内消息" />
                        </LinearLayout>

                        <LinearLayout
                            style="@style/width_"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_xtsz"
                                android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                android:background="@drawable/xtsz"
                                android:contentDescription="@string/app_name" />

                            <TextView
                                style="@style/main_text"
                                android:textSize="@dimen/text_15"
                                android:text="系统设置" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>