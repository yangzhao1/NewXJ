<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/interval">

        <include
            layout="@layout/g_titlebar"
            ></include>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@color/bg_white">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="文字大小"
                android:textSize="?textsizes"
                />

            <LinearLayout
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/fontgray_shape"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/standard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/orangered"
                    android:textSize="@dimen/textsize_smalle"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/setfont_left_shape"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:text="标准"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hintcolor"/>
                <TextView
                    android:id="@+id/big"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_smalle"
                    android:gravity="center"
                    android:text="较大"/>
                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/hintcolor"/>
                <TextView
                    android:id="@+id/sobig"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/textsize_smalle"
                    android:gravity="center"
                    android:text="超大"/>

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:visibility="gone"
            android:padding="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="清理缓存"
                android:textSize="@dimen/text_small"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/aboutwe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="@color/black"

                android:textSize="?textsizes"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right"

                android:textSize="?textsizes"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/update_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_white"
            android:layout_marginTop="7dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="@color/black"

                android:textSize="?textsizes"
                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gengxin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:background="@color/bg_white"
            android:padding="10dp">

            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="检查更新"
                android:textSize="?textsizes"
                />

            <TextView
                android:id="@+id/rednew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new"
                android:paddingLeft="5dp"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_new"
                android:layout_toLeftOf="@id/right"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/right"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:background="@color/bg_white"
            android:text="退出登录"
            android:gravity="center"
            android:textSize="?textsize2"
            android:textColor="@color/red"
            />
    </LinearLayout>
</LinearLayout>