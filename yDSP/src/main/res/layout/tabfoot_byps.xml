<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#edf2f6"
        android:orientation="horizontal" >

        <LinearLayout
            style="@style/width_"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/line_dcl"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="LayoutOnclick" >

                <LinearLayout style="@style/main_wrap" >

                    <TextView
                        style="@style/dbsx_text"
                        android:text="待处理" />

                    <TextView
                        android:id="@+id/tv_dcl"
                        style="@style/dbsx_text_red"
                        android:layout_marginLeft="2dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <View
                    android:id="@+id/view_dcl"
                    style="@style/dbsx_view_blue"
                    android:visibility="gone" />

                <View style="@style/dbsx_view_grey" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/dbsx_view" />

        <LinearLayout
            style="@style/width_"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/line_ycl"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:gravity="center_vertical|center_horizontal"
                android:onClick="LayoutOnclick" >

                <LinearLayout
                    style="@style/width_"
                    android:visibility="gone" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:gravity="center_vertical|center_horizontal" >

                    <LinearLayout style="@style/main_wrap" >

                        <TextView
                            style="@style/dbsx_text"
                            android:text="已处理" />

                        <TextView
                            android:id="@+id/tv_ycl"
                            style="@style/dbsx_text_red"
                            android:layout_marginLeft="2dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/width_"
                    android:gravity="center_vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/line_s"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:visibility="gone" >

                        <ImageView
                            style="@style/main_wrap"
                            android:background="@drawable/byps_shang" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/line_x"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical" >

                        <ImageView
                            style="@style/main_wrap"
                            android:background="@drawable/byps_xia" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <View
                    android:id="@+id/view_ycl"
                    style="@style/dbsx_view_blue"
                    android:visibility="gone" />

                <View style="@style/dbsx_view_grey" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_ycl_zt"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#edf2f6"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/relative_ycl_tg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tv_ycl_tg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="通过"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:id="@+id/image_ycl_tg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/xz"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/relative_ycl_bh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tv_ycl_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="驳回"
                android:textColor="@color/black"
                android:textSize="@dimen/text_15" />

            <ImageView
                android:id="@+id/image_ycl_bh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/xz"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />
    </LinearLayout>

</LinearLayout>