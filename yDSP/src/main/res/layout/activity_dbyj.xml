<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white" >

            <EditText
                android:id="@+id/et_spyj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@null"
                android:hint="请输入督办意见"
                android:maxLength="100"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

        <LinearLayout style="@style/width_" >

            <LinearLayout
                android:id="@+id/line_ty"
                style="@style/line"
                android:background="@drawable/shape_greenbtn"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    style="@style/popup_btn"
                    android:text="同     意" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/width_" >

            <LinearLayout
                android:id="@+id/line_th"
                style="@style/line"
                android:background="@drawable/shape_orangebtn"
                android:gravity="center_vertical|center_horizontal" >

                <TextView
                    style="@style/popup_btn"
                    android:text="退     回" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>