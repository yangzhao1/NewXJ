<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/return_main"
        style="@style/width_"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/return_to_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center_horizontal|center_vertical" >

        <TextView
            android:id="@+id/actionBarReturnText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移动审批系统"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/width_"
        android:gravity="right|center_vertical"
        android:layout_marginRight="10dp" >

        <LinearLayout
            android:id="@+id/line_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_greenbtn"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:text="发 送"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/line_wfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_greybtn"
            android:gravity="center_vertical|center_horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@null"
                android:text="发 送"
                android:textColor="@color/white"
                android:textSize="@dimen/text_15" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>